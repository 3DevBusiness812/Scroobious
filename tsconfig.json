{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "paths": {
      "@components": ["src/components/index"],
      "@components/*": ["src/components/*"],
      "@core": ["src/core/index"],
      "@core/*": ["src/core/*"],
      "@binding": ["api/generated/binding"],
      "@lib/*": ["src/lib/*"],
      "@src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./types"]
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "types/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.js"]
}
